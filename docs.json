{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Play Hosting Docs",
  "colors": {
    "primary": "#D2B361",
    "light": "#FAD77B",
    "dark": "#C6A13F"
  },
  "background": {
    "color": {
      "dark": "#121212"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Need support? Join Discord",
          "href": "https://play.hosting/discord",
          "icon": "discord"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Create account",
        "href": "https://panel.play.hosting/auth/register"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://panel.play.hosting"
    }
  }
}